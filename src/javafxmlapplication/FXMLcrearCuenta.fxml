<BorderPane id="panelFondo" stylesheets="@../resources/CSSRegistar.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.FXMLcrearCuentaController">
   <center>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="500.0">
         <children>
            <VBox prefHeight="133.0" prefWidth="456.0">
               <children>
                  <HBox prefHeight="0.0" prefWidth="436.0">
                     <children>
                        <Label prefHeight="18.0" prefWidth="66.0" text="Nombre" />
                        <TextField fx:id="name" />
                        <Pane prefHeight="25.0" prefWidth="10.0" />
                        <Label prefHeight="18.0" prefWidth="67.0" text="Apellidos">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="surname" />
                        <VBox>
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
                  <Pane prefHeight="41.0" prefWidth="456.0" />
                  <HBox prefHeight="47.0" prefWidth="456.0">
                     <children>
                        <Label text="Nº Telefono" />
                        <TextField fx:id="telf" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="123.0" />
                        <Pane prefHeight="48.0" prefWidth="36.0" />
                        <Label text="nickname" />
                        <TextField fx:id="nickname" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="115.0" />
                     </children>
                  </HBox>
                  <Pane layoutX="10.0" layoutY="35.0" prefHeight="1.0" prefWidth="436.0" />
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="54.0" prefWidth="456.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="94.0" text="contraseña" />
                  <PasswordField fx:id="password" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="129.0" />
                  <Pane prefHeight="47.0" prefWidth="45.0" />
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="42.0" prefWidth="139.0" text="repetir contraseña" />
                  <PasswordField fx:id="password2" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="117.0" />
                  <Label fx:id="rcb" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <ImageView fx:id="imgView" fitHeight="71.0" fitWidth="85.0" pickOnBounds="true" preserveRatio="true" />
                        <Button mnemonicParsing="false" onAction="#imgPick" prefHeight="25.0" prefWidth="110.0" text="elegir foto" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <Label text="Tarjeta de crédito (opcional)">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <HBox>
                     <children>
                        <Label text="Número" />
                        <TextField fx:id="numcred" />
                        <Label layoutX="10.0" layoutY="10.0" text="SVC">
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="svc" layoutX="38.0" layoutY="10.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="72.0" prefWidth="436.0">
               <children>
                  <Button fx:id="botonRegistrarse" mnemonicParsing="false" onAction="#registrarse" text="registrarse">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></Button>
                  <Button fx:id="cancelarBoton" mnemonicParsing="false" onAction="#cancel" text="cancelar">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <VBox id="titulo" alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label id="tt" alignment="CENTER" prefHeight="42.0" prefWidth="193.0" text="Registra tu cuenta">
               <padding>
                  <Insets bottom="20.0" />
               </padding>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </top>
